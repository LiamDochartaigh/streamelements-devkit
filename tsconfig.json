{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.node.json"
    },
    {
      "path": "./tsconfig.app.json"
    }
  ],
  "compilerOptions": {
    "lib": ["ES2022", "dom"],
    "allowJs": true,
    "target": "ES2022",
    "esModuleInterop": true,
    "moduleResolution": "node16",
    "module": "Node16",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "vite/client",
    ],
    "strict": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.json",
  ],
}